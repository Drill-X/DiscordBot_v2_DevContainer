// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Java",
	"image": "ghcr.io/league-infrastructure/jtljava:latest",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "false",
			"installGradle": "false"
		},
		"ghcr.io/devcontainers/features/desktop-lite:1": {
			"password" : "code4life"
		}
	},

	"containerEnv": {
		//"DISCORD_TOKEN": "${localEnv:DISCORD_TOKEN}",
		//"CHANNEL_NAME": "${localEnv:CHANNEL_NAME}"
		"CHANNEL_NAME": "testing-1"
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",
	"postCreateCommand": "echo \"Input bot token:\" && read token && export DISCORD_TOKEN=$token && /workspaces/DiscordBot_v2_DevContainer/gradlew run",

	// Configure tool-specific properties.
	"customizations": {
		 "vscode": {
      		"extensions": [
      			"streetsidesoftware.code-spell-checker",
      			"vscjava.vscode-java-pack",
      			"Tobiah.language-pde"

      		]
    	}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}